<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>HomeCenter</Authors>
    <Company>HomeCenter</Company>
    <Product>HomeCenter</Product>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CodeGeneration.Roslyn.BuildTime" Version="0.4.88">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ConcurrentHashSet" Version="1.0.2" />
    <PackageReference Include="CSharpFunctionalExtensions" Version="1.13.0" />
    <PackageReference Include="Google.Protobuf" Version="3.6.1" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="Quartz" Version="3.0.7" />
    <PackageReference Include="SimpleInjector" Version="4.4.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HomeCenter.CodeGeneration\HomeCenter.CodeGeneration.csproj" />
    <ProjectReference Include="..\HomeCenter.EventAggregator\HomeCenter.EventAggregator.csproj" />
    <ProjectReference Include="..\HomeCenter.Messages\HomeCenter.Messages.csproj" />
  </ItemGroup>


  <ItemGroup>
    <DotNetCliToolReference Include="dotnet-codegen" Version="0.4.88" />
  </ItemGroup>


  <ItemGroup>
    <Reference Include="Grpc.Core">
      <HintPath>..\..\Dependencies\Grpc.Core.dll</HintPath>
    </Reference>
    <Reference Include="Proto.Actor">
      <HintPath>..\..\Dependencies\Proto.Actor.dll</HintPath>
    </Reference>
    <Reference Include="Proto.Mailbox">
      <HintPath>..\..\Dependencies\Proto.Mailbox.dll</HintPath>
    </Reference>
    <Reference Include="Proto.Router">
      <HintPath>..\..\Dependencies\Proto.Router.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
